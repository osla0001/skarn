{%- doc -%}
  Intended for use in a block similar to the button block.

  @param {string} link - link to render
  @param {object} [block] - The block

  @example
  {% render 'button', link: '/collections/all' %}
{%- enddoc -%}

{% assign block_settings = block.settings %}

<a
  {% if link == blank %}
    role="link"
    aria-disabled="true"
  {% else %}
    href="{{ link }}"
  {% endif %}
  class="
    size-style
    {{ block_settings.style_class }}
    {{ block_settings.style_class }}--{{ block.id }}
  "
  style="{% render 'size-style', settings: block_settings %}"
  {%- if block_settings.open_in_new_tab -%}
    target="_blank"
    rel="noopener noreferrer"
  {%- endif -%}
  {{ block.shopify_attributes }}
>
  {{ block_settings.label }}
</a>

{% stylesheet %}
  .button,
  button.shopify-payment-button__button--unbranded {
    --button-color: transparent;
    --button-background-color: transparent;
    --button-border-color: transparent;
    --button-border-width: none;
  }

  .button {
    background-color: transparent;
    outline: 1px solid white !important;
    color: white;
    padding: 5px 10px;
    margin: 0;
    height: fit-content;

    &:hover {
      background-color: transparent;
      outline: 2px solid white !important;
      margin: 0;
      -webkit-text-stroke: 0.09px white;

      a {
        font-family: "ZT Nature";
        font-weight: 600;
      }
    }
  }

  .button-secondary {
    background-color: transparent;
    outline: 1px solid black !important;
    color: black;
    padding: 5px 10px;
    margin: 0;
    border-radius: 0;
    height: fit-content;

    &:hover {
      background-color: transparent;
      outline: 2px solid black !important;
      margin: 0;
      -webkit-text-stroke: 0.09px black;
    }
  }

  .link {
    text-decoration: none;
    text-decoration-color: currentcolor;

    &:hover {
      color: var(--color-primary-hover);
      text-decoration-color: transparent;
    }
  }
{% endstylesheet %}
