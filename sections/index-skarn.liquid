{% comment %}
  Skarn custom frontpage section. Connected to section_bWTT6D in index.json.
  Add HTML and CSS as needed. Follows Shopify section conventions.
{% endcomment %}

<section class="skarn_section{% if section.settings.show_border_bottom %} skarn_section--border-bottom{% endif %}">
<div class="index-skarn_heading">
    <h1>{{ section.settings.heading }}</h1>
   <img src="{{ settings.logo | image_url: width: 320 }}" alt="Logo" class="index-skarn__logo" style="max-width: 200px; height: auto; margin-bottom: 24px;" />

</div>
<div class="index-skarn_text">
  {{ section.settings.text }}
   {% if section.settings.show_secondary_button %}
     <button class="button-secondary">
       <a href="{{ section.settings.secondary_button_link | default: '#' }}" style="text-decoration: none; color: inherit; display: block; width: 100%; height: 100%;">
         {{ section.settings.secondary_button_label | default: 'Sekundær knap' }}
       </a>
     </button>
   {% endif %}
   </div>
</section>

{% stylesheet %}

.skarn_section {
  padding: 2rem 2rem;
  margin: 0 auto;
}
.skarn_section--border-bottom {
  border-bottom: 1px solid black;
}

.index-skarn_heading {
    text-align: center;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 1rem;
}

@media screen and (max-width: 700px) {
    .index-skarn_heading {
        flex-direction: column;
        gap: 0;
    }
    .index-skarn_heading h1{
margin-bottom: 1rem;
}
}

.index-skarn_heading h1{
text-wrap: nowrap !important;
}

.index-skarn__logo{
    margin-top: 0.3rem;
}


.index-skarn_text {
  max-width: 550px;
  margin: 0 auto;
  text-align: left;
  font-size: 1.1rem;
  line-height: 1.6;
  color: #3e4753ff;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 1rem;
}

.index-skarn_text button{
    margin-block-start: auto;
}

{% endstylesheet %}

{% schema %}
{
  "name": "Hvem er Skarn",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_border_bottom",
      "label": "Vis sort bundlinje",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_secondary_button",
      "label": "Vis sekundær knap",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Overskrift",
      "default": "Hvem er"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Tekst",
      "default": "<p>bla bla</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Knap link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Sekundær knap label",
      "default": "Læs mere →"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Sekundær knap link"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Farveskema"
    }
  ],
  "presets": [
    {
      "name": "Hvem er Skarn"
    }
  ]
}
{% endschema %}
