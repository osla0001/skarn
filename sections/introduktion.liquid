  }
}


.intro_2 {
  width: 100%;
  margin: 3rem auto;
}
.intro-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
}
.intro-product-card {
  aspect-ratio: 1/1;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.07);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  transition: box-shadow 0.2s;
}
.intro-product-card:hover {
  box-shadow: 0 4px 16px rgba(0,0,0,0.12);
}
.intro-product-image-wrapper {
  width: 80%;
  height: 0;
  padding-bottom: 80%;
  position: relative;
}
.intro-product-image {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; border-radius: 8px;
}
.intro-product-title {
  font-size: 1rem;
  font-weight: 500;
  margin-top: 0.5rem;
  text-align: center;
}
.intro-product-price {
  font-size: 0.95rem;
  color: #222;
  margin-top: 0.25rem;
}
@media screen and (max-width: 1200px) {
  .intro-grid {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(6, 1fr);
  }
}
@media screen and (max-width: 749px) {
  .intro-grid {
    grid-template-columns: 1fr;
    grid-template-rows: repeat(9, 1fr);
  }
  .intro-product-card {
    aspect-ratio: 1/1;
  }
}
</style>