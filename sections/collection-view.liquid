--resource-list-mobile-gap-max: 9999px;
  --resource-list-column-gap: -1px;
  --resource-card-size: clamp(220px, 22vw, 358px);

  width: 100%;
  max-width: 100%;
  overflow-x: auto;
  overflow-y: hidden;
  -webkit-overflow-scrolling: touch;
  display: block;
  scrollbar-width: none;
  border-top: 1px solid black;
  border-bottom: 1px solid black;
}

  @media screen and (max-width: 749px) {
    --resource-list-mobile-gap-max: -1px;
  }

  @container resource-list (max-width: 749px) {
    --resource-list-mobile-gap-max: -1px;
  }

.aarti-list--grid {
  display: flex;
  flex-wrap: nowrap;
  gap: var(--resource-list-column-gap);
  width: fit-content;
  align-items: start;
}

.aarti_collection .resource-list__blank-item {
border: none !important;
}

.aarti_collection .aarti-kollektion-link{
  display: flex;
  align-items: center;
  justify-content: center;
  text-decoration: none;
  color: inherit;
  transition: box-shadow 0.2s;
}

.aarti_collection .aarti-kollektion-link h2 {
  font-size: clamp(40px, 6vw, 40px) !important;
  text-align: center;
  text-transform: uppercase !important;
}

.aarti_collection .aarti-kollektion-link h3 {
  font-size: clamp(18px, 6vw, 18px) !important;
  text-align: center;
  text-transform: uppercase !important;
  color: var(--paragraph-text-color);
  opacity: 0.7;
}

.aarti_collection .aarti-kollektion-link:hover {
